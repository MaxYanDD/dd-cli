{
  "packages": [
    "commands/*",
    "core/*",
    "utils/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    }
  },
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "2.0.0"
}
